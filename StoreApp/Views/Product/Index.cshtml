@model ProductListViewModel
<div class="row">
    <div class="col-md-3">
        <div class="row my-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
            <div products="" number="3"></div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Product prd in Model.Products)
            {
                <partial name="~/Views/Product/Partials/_ProductCard.cshtml" model="@prd" />
            }
        </div>
        <div>
            <div page-model="@Model?.Pagination" 
            page-action="Index" page-classes-enabled="true" 
            page-class="btn" 
            page-class-normal="btn-outline-primary" 
            page-class-selected="btn-primary" class="btn-group"></div>
        </div>
    </div>
</div>

@section Footer {
    <div>
        Only for Index Footer
    </div>
}